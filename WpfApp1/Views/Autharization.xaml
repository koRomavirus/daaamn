<Window x:Class="WpfApp1.Views.Autharization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="Autharization"
        Height="450"
        Width="400"
        ResizeMode="NoResize">

    <StackPanel
        Orientation="Vertical" Height="360" VerticalAlignment="Center" 
        >

        <TextBlock 
            FontSize="16"
            Margin="8"
            Text="Login"/>
        <TextBox
            x:Name="txtLogin"
            Margin="10,0,100,0"
            />
        <TextBlock
            FontSize="16"
            Margin="8"
            Text="Password"
            />
        <PasswordBox
             x:Name="txtPassword"
             Margin="10,0,100,0"
             />
        <Button
            Click="btnLogin_Click"
            x:Name="btnLogin"
            Content="Авторизация"
            Margin="16"
            Width="100"
            />



    </StackPanel>
</Window>
